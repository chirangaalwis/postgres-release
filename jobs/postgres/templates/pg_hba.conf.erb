local   all             all                                     trust
host    all             all             127.0.0.1/32            trust
host    all             all             ::1/128                 trust
<% p("databases.roles", []).each do |role| %>
<% if role["password"] %>
host all  <%= role["name"] %> 0.0.0.0/0 md5
<% else %>
hostssl all  <%= role["name"] %> 0.0.0.0/0 cert clientcert=1
<% end %>
<% end %>
